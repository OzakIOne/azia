{
  "name": "azia",
  "version": "1.0.0",
  "description": "Small script that open a youtube video every X minutes",
  "license": "MIT",
  "author": "ozaki",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "build": "bun build ./index.ts --outdir ./dist --target bun",
    "compile:windows": "bun build --compile --minify --sourcemap --bytecode --target=bun-windows-x64 ./index.ts --outfile bin/windows/azia",
    "compile:linux": "bun build --compile --minify --sourcemap --bytecode --target=bun-linux-x64 ./index.ts --outfile bin/linux/azia",
    "compile:macos": "bun build --compile --minify --sourcemap --bytecode --target=bun-darwin-arm64 ./index.ts --outfile bin/macos/azia",
    "clean": "rm -rf dist/ bin/ azia"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "open": "^11.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5"
  }
}
